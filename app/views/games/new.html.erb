<div class="box  p-5 w-50 p-3">
<h1>--Welcome to the Letter Game--</h1>
<h2>Here are your letters:</h2>
<% @letters.each do |letter| %>
<button class="button-53" role="button"><%= letter.capitalize %></button>
<% end %>
<h3>What is the longest word you can find?</h3>
<form action="score" method="post" data-turbo="false" class="input-group input-group-lg inputGroup-sizing-lg" aria-label="Large">
  <input type="text" name="ask"class="form-control form-control-lg">
  <input type="submit" value="Play" class="button btn-primary btn-lg">
</form>
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>





</div>
